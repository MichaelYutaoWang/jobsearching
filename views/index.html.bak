          <!-- administrator login -->
          <div id="login_administrator_form" style="display:none">
            <form class="form-horizontal" action="login_administrator" method="POST" name="form_admin" id="form_admin">
              <fieldset>
                <legend class="resizables"> Administrator Login </legend>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Enter user name:</label>
                    <div class="col-lg-10">
                      <input type="text" style="width:400px" autocomplete="off" class="form-control" id="username" name="username" placeholder="User Name" value="admin"/>
                    </div>
                    <label class="col-lg-2 control-label">Enter password:</label>
                    <div class="col-lg-10">
                      <input type="password" style="width:400px" autocomplete="off" class="form-control" id="password" name="password" placeholder="User Name" value="admin123"/>
                    </div>
                </div>

                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    <button id="login_administrator_button" type="submit" class="btn btn-success">Login</button>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>

          <div id="login_general_user_form" style="display:none">
            <form class="form-horizontal" action="/login_general_user" method="POST" name="form_guser" id="form_guser">
              <fieldset>
                <legend class="resizables"> General User Login </legend>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Enter user name:</label>
                    <div class="col-lg-10">
                      <input type="text" style="width:400px" autocomplete="off" class="form-control" id="username" name="username" placeholder="User Name" value="user1"/>
                    </div>
                    <label class="col-lg-2 control-label">Enter password:</label>
                    <div class="col-lg-10">
                      <input type="password" style="width:400px" autocomplete="off" class="form-control" id="password" name="password" placeholder="User Name" value="user123"/>
                    </div>
                </div>

                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    <button id="login_general_user_button" type="submit" class="btn btn-info" onclick="submit_guser_login()">Login</button>
                    <button id="register_general_user_button" type="submit" class="btn btn-danger" onclick="submit_guser_register()">Register</button>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>

          <div id="login_enterprise_user_form" style="display:none">
            <form class="form-horizontal" action="/login_enterprise_user" method="POST" name="form_euser" id="form_euser">
              <fieldset>
                <legend class="resizables"> Enterprise User Login </legend>
                <div class="form-group">
                    <label class="col-lg-2 control-label">Enter user name:</label>
                    <div class="col-lg-10">
                      <input type="text" style="width:400px" autocomplete="off" class="form-control" id="username" name="username" placeholder="User Name" value="company1"/>
                    </div>
                    <label class="col-lg-2 control-label">Enter password:</label>
                    <div class="col-lg-10">
                      <input type="password" style="width:400px" autocomplete="off" class="form-control" id="password" name="password" placeholder="User Name" value="company123"/>
                    </div>
                </div>

                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    <button id="login_enterprise_user_button" type="submit" class="btn btn-info" onclick="submit_euser_login()">Login</button>
                    <button id="register_enterprise_user_button" type="submit" class="btn btn-danger" onclick="submit_euser_register()">Register</button>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>

        <script>
        	
        	function submit_guser_login()
        	{
        		document.getElementById("form_guser").action = "login_general_user";
        		return true;
        	}
        	function submit_guser_register()
        	{
        		document.getElementById("form_guser").action = "register_general_user";
        		return true;
        	}
        	
        	function submit_euser_login()
        	{
        		document.getElementById("form_euser").action = "login_enterprise_user";
        		return true;
        	}
        	function submit_euser_register()
        	{
        		document.getElementById("form_euser").action = "register_enterprise_user";
        		return true;
        	}
        	
	  			function login_administrator()
	  			{
	  				document.getElementById("login_administrator_form").style.display="block";
	  				document.getElementById("login_general_user_form").style.display="none";
	  				document.getElementById("login_enterprise_user_form").style.display="none";
	  				document.getElementById("vision_form").style.display="none";
	  			}

	  			function login_general_user()
	  			{
	  				document.getElementById("login_administrator_form").style.display="none";
	  				document.getElementById("login_general_user_form").style.display="block";
	  				document.getElementById("login_enterprise_user_form").style.display="none";
	  				document.getElementById("vision_form").style.display="none";
	  			}

	  			function login_enterprise_user()
	  			{
	  				document.getElementById("login_administrator_form").style.display="none";
	  				document.getElementById("login_general_user_form").style.display="none";
	  				document.getElementById("login_enterprise_user_form").style.display="block";
	  				document.getElementById("vision_form").style.display="none";
	  			}
  		</script>
